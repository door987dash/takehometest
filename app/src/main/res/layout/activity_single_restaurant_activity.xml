<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="doordash.eric.com.myapplication.singlerestaurant.SingleRestaurantActivity">

    <TextView
        android:layout_margin="@dimen/single_restaurant_margin"
        android:id="@+id/single_restaurant_name"
        android:text="@string/no_data_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/single_restaurant_image"/>
    <TextView
        android:layout_margin="@dimen/single_restaurant_margin"
        android:id="@+id/single_restaurant_food_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="@dimen/single_restaurant_margin"
        android:id="@+id/single_restaurant_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
